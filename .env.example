# Server Configuration
PORT=5000
API_VERSION=/api/v1
TOKEN_SECRET=your-secret-key-here
ALLOW_SYNC=true
AUTO_SETUP_DB=true
NODE_ENV=development
SALT_ROUND=10

# Database Configuration
# Options: mysql, postgresql, sqlite, mariadb, mssql
USE_DB=sqlite

# MySQL/PostgreSQL/MariaDB/MSSQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=foodtrip

# SQLite Configuration
DB_STORAGE=./db/database.sqlite

# Additional Database Options
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Logging
DB_LOGGING=false